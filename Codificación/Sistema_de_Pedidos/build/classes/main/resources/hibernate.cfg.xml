<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"classpath://main/resources/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_ssc</property>
  <property name="hibernate.connection.username">ssc_proyecto</property>
  <property name="hibernate.connection.password">ssc_proyecto</property>
  <property name="hibernate.show_sql">false</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
  <property name="current_session_context_class">thread</property>
  <mapping class="entidades.Categorias" resource="entidades/Categorias.hbm.xml" />
  <mapping class="entidades.Clientes" resource="entidades/Clientes.hbm.xml" />
  <mapping class="entidades.LineaDePedido" resource="entidades/LineaDePedido.hbm.xml" />
  <mapping class="entidades.LineasDeVentas" resource="entidades/LineasDeVentas.hbm.xml" />
  <mapping class="entidades.ParametrosNegocio" resource="entidades/ParametrosNegocio.hbm.xml" />
  <mapping class="entidades.Pedidos" resource="entidades/Pedidos.hbm.xml" />
  <mapping class="entidades.Precios" resource="entidades/Precios.hbm.xml" />
  <mapping class="entidades.Productos" resource="entidades/Productos.hbm.xml" />
  <mapping class="entidades.Subcategorias" resource="entidades/Subcategorias.hbm.xml" />
  <mapping class="entidades.Ventas" resource="entidades/Ventas.hbm.xml" />
  <mapping class="entidades.Anuncios" resource="entidades/Anuncios.hbm.xml" />
  <mapping class="entidades.Userdetail" resource="entidades/Userdetail.hbm.xml" />
  
  <!--   <mapping class="entidades.Categorias" resource="entidades/Categorias.hbm.xml"/>  
   <mapping class="entidades." resource="entidades/.hbm.xml"/>  -->
 </session-factory>
</hibernate-configuration>
